<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand">LOGO</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="nav justify-content-end">
            <% if customer_signed_in? %>
              <li class="nav-item">
                <%= link_to customer_path(current_customer.id) do %>
                  <p class="nav-link active">マイページ</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to items_path do %>
                  <p class="nav-link">商品一覧</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to cart_items_path do %>
                  <p class="nav-link">カート</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_customer_session_path, method: :delete do %>
                  <p class="nav-link">ログアウト</p>
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_items_path do %>
                  <p class="nav-link">商品一覧</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_customers_path do %>
                  <p class="nav-link">会員一覧</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_order_path(@order.id) do %>
                  <p class="nav-link">注文履歴一覧</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <p class="nav-link">ログアウト</p>
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to about_path do %>
                  <p class="nav-link">About</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to items_path do %>
                  <p class="nav-link">商品一覧</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_registration_path do %>
                  <p class="nav-link">新規登録</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_customer_session_path do %>
                  <p class="nav-link">ログイン</p>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
