<div class="containar mt-5">
  <div class="row">
    <div class="col-md-2 offset-md-3">
      <%= image_tag @item.get_image(200, 200) %>
    </div>
    <div class="col-md-5">
      <table class="table table-borderless">
        <tr>
          <th class="col-md-3"><h5><%= @item.name %></h5></th>
        </tr>
        <tr>
          <td class="col-md-3"><%= @item.introduction %></td>
        </tr>
        <tr>
          <td class="col-md-3"><strong>¥<%= @item.with_tax_price %></strong>（税込）</td>
        </tr>
        <tr>
          <td class="col-md-3">
            <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
              <%= f.select :amount, *[1..20] %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.submit "　カートに入れる　", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>





