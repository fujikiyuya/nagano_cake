<h4>注文情報入力</h4>
<%= form_with model: @order, url: comfirm_path, method: :post do |f| %>
<h4>支払方法</h4>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h4>お届け先</h4>
  <%= f.radio_button :address, 1 %>
  <%= f.label :address_1, "ご自身の住所" %>
  <%= current_customer.postal_code + current_customer.address %><br>
  <%= current_customer.last_name + current_customer.first_name %>

  <%= f.radio_button :address, 2 %>
  <%= f.label :address_2, "登録済住所から選択" %>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>

  <%= f.radio_button :address, 3 %>
  <%= f.label :address_3, "新しいお届け先" %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
    </tr>
  </table>
  <%= f.submit "確認画面へ進む" %>
<% end %>
