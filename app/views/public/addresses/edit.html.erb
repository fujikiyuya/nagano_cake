<div class="container mt-4 mb-3">
  <div class="row">
    <h5 class="col-md-2 offset-md-1" style="background: #EEEEEE; text-align: center;"><strong>配送先編集</strong></h5>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <table class="table table-borderless">
      <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
        <tr>
          <td class="col-sm-3">郵便番号(ハイフンなし)</td>
          <td class="col-sm-3 offset-sm-1"><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td class="col-sm-3">住所</td>
          <td class="col-sm-3 offset-sm-1"><%= f.text_field :address, size: 60 %></td>
        </tr>
        <tr>
          <td class="col-sm-3">宛名</td>
          <td class="col-sm-3 offset-sm-1"><%= f.text_field :name %></td>
          <td class="col-sm-1"><%= f.submit " 変更内容を保存する ", class: "btn btn-success" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>


