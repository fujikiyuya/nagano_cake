<div class="container mt-4 mb-2">
  <div class="row">
    <h5 class="col-md-2" style="background: #EEEEEE; text-align: center;"><strong>マイページ</strong></h5>
  </div>
</div>
<div class="container-fluid ml-4">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-borderless">
        <tr>
          <td class="col-sm-1"><h5><strong>登録情報</strong></h5></td>
          <td class="col-sm-2"><%= link_to "　編集する　", edit_customer_path, class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table table-bordered">
        <tr>
          <td class="table table-secondary col-sm-2">氏名</td>
          <td class="col-sm-4"><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <td class="table table-secondary col-sm-2">カナ</td>
          <td class="col-sm-4"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table table-secondary col-sm-2">郵便番号</td>
          <td class="col-sm-4"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table table-secondary col-sm-2">住所</td>
          <td class="col-sm-4"><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table table-secondary col-sm-2">電話番号</td>
          <td class="col-sm-4"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table table-secondary col-sm-2">メールアドレス</td>
          <td class="col-sm-4"><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container-fluid ml-4 mb-3">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-borderless">
        <tr>
          <td><strong>配送先</strong></td>
          <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td>
        </tr>
        <tr>
          <td><strong>注文履歴</strong></td>
          <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>


